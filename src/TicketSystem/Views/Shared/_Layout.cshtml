<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - سامانه تیکت</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body { font-family: Tahoma, Arial, sans-serif; }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="bi bi-ticket-perforated me-1"></i>سامانه تیکت
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">صفحه اصلی</a>
                    </li>
                    @if (Context.Session.GetInt32("UserId") != null)
                    {
                        var role = Context.Session.GetString("UserRole");
                        @if (role == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">پنل مدیریت</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="AllTickets">همه درخواست‌ها</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Tickets" asp-action="Dashboard">داشبورد</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Tickets" asp-action="Create">ثبت درخواست</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Tickets" asp-action="MyTickets">درخواست‌های من</a>
                            </li>
                        }
                    }
                </ul>
                <ul class="navbar-nav">
                    @if (Context.Session.GetInt32("UserId") != null)
                    {
                        <li class="nav-item">
                            <span class="nav-link text-light">
                                <i class="bi bi-person-circle me-1"></i>
                                @Context.Session.GetString("UserName")
                                @if (Context.Session.GetString("UserRole") == "Admin")
                                {
                                    <span class="badge bg-warning text-dark ms-1">مدیر</span>
                                }
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">
                                <i class="bi bi-box-arrow-right me-1"></i>خروج
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-box-arrow-in-left me-1"></i>ورود
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Register">
                                <i class="bi bi-person-plus me-1"></i>ثبت‌نام
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="pb-4">
        @RenderBody()
    </main>

    <footer class="bg-light py-3 mt-5 border-top">
        <div class="container text-center text-muted">
            <small>© 1404 - سامانه ثبت و پیگیری درخواست‌ها</small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
