<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - سامانه تیکت</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body { font-family: Tahoma, Arial, sans-serif; }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <i class="bi bi-ticket-perforated"></i> سامانه تیکت
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        @if (Context.Session.GetInt32("UserId") != null)
                        {
                            var role = Context.Session.GetString("UserRole");
                            if (role == "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Index">
                                        <i class="bi bi-speedometer2"></i> داشبورد مدیر
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Tickets" asp-action="Index">
                                        <i class="bi bi-list-task"></i> درخواست‌های من
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Tickets" asp-action="Create">
                                        <i class="bi bi-plus-circle"></i> ثبت درخواست
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (Context.Session.GetInt32("UserId") != null)
                        {
                            var userName = Context.Session.GetString("UserName");
                            var userRole = Context.Session.GetString("UserRole");
                            <li class="nav-item">
                                <span class="nav-link text-light">
                                    <i class="bi bi-person-circle"></i> @userName
                                    @if (userRole == "Admin")
                                    {
                                        <span class="badge bg-danger">مدیر</span>
                                    }
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-warning" asp-controller="Account" asp-action="Logout">
                                    <i class="bi bi-box-arrow-left"></i> خروج
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> ورود
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus"></i> ثبت‌نام
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container text-center">
            <span class="text-muted">سامانه ثبت و پیگیری درخواست‌ها - 1404</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
