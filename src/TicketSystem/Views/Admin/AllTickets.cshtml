@model List<TicketSystem.ViewModels.AdminTicketViewModel>
@{
    ViewData["Title"] = "همه تیکت‌ها";
    var currentStatus = ViewBag.CurrentStatus as string;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-ticket-detailed text-primary"></i>
            مدیریت تیکت‌ها
        </h2>
        <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-right"></i>
            بازگشت به داشبورد
        </a>
    </div>

    <!-- فیلتر وضعیت -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-center">
                <div class="col-auto">
                    <label class="form-label mb-0">فیلتر بر اساس وضعیت:</label>
                </div>
                <div class="col-auto">
                    <select name="status" class="form-select" onchange="this.form.submit()">
                        <option value="">همه</option>
                        @if(currentStatus == "Open")
                        {
                            <option value="Open" selected>باز</option>
                        }
                        else
                        {
                            <option value="Open">باز</option>
                        }
                        @if(currentStatus == "InProgress")
                        {
                            <option value="InProgress" selected>در حال بررسی</option>
                        }
                        else
                        {
                            <option value="InProgress">در حال بررسی</option>
                        }
                        @if(currentStatus == "Closed")
                        {
                            <option value="Closed" selected>بسته شده</option>
                        }
                        else
                        {
                            <option value="Closed">بسته شده</option>
                        }
                    </select>
                </div>
                <div class="col-auto">
                    <span class="badge bg-secondary">@Model.Count تیکت</span>
                </div>
            </form>
        </div>
    </div>

    <!-- جدول تیکت‌ها -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th style="width: 60px;">#</th>
                                <th>عنوان</th>
                                <th>کاربر</th>
                                <th>ایمیل</th>
                                <th style="width: 120px;">وضعیت</th>
                                <th style="width: 100px;">پاسخ‌ها</th>
                                <th style="width: 150px;">تاریخ ایجاد</th>
                                <th style="width: 100px;">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ticket in Model)
                            {
                                var statusClass = "bg-secondary";
                                var statusText = ticket.Status;
                                
                                if(ticket.Status == "Open")
                                {
                                    statusClass = "bg-warning text-dark";
                                    statusText = "باز";
                                }
                                else if(ticket.Status == "InProgress")
                                {
                                    statusClass = "bg-info text-white";
                                    statusText = "در حال بررسی";
                                }
                                else if(ticket.Status == "Closed")
                                {
                                    statusClass = "bg-success text-white";
                                    statusText = "بسته شده";
                                }
                                
                                <tr>
                                    <td><strong>@ticket.Id</strong></td>
                                    <td>
                                        <a href="@Url.Action("TicketDetails", "Admin", new { id = ticket.Id })" 
                                           class="text-decoration-none">
                                            @ticket.Title
                                        </a>
                                    </td>
                                    <td>@ticket.UserName</td>
                                    <td>
                                        <small class="text-muted">@ticket.UserEmail</small>
                                    </td>
                                    <td>
                                        <span class="badge @statusClass">@statusText</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@ticket.ReplyCount پاسخ</span>
                                    </td>
                                    <td>
                                        <small>@ticket.CreatedAt.ToString("yyyy/MM/dd HH:mm")</small>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("TicketDetails", "Admin", new { id = ticket.Id })" 
                                           class="btn btn-sm btn-primary">
                                            <i class="bi bi-eye"></i>
                                            مشاهده
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                    <h5 class="mt-3 text-muted">هیچ تیکتی یافت نشد</h5>
                    @if (!string.IsNullOrEmpty(currentStatus))
                    {
                        <p class="text-muted">با وضعیت انتخاب شده تیکتی وجود ندارد</p>
                        <a href="@Url.Action("AllTickets", "Admin")" class="btn btn-outline-primary">
                            نمایش همه تیکت‌ها
                        </a>
                    }
                </div>
            }
        </div>
    </div>
</div>
