@model TicketSystem.ViewModels.AdminTicketDetailsViewModel
@{
    ViewData["Title"] = "جزئیات تیکت";
    
    var statusBadgeClass = Model.Status switch
    {
        "Open" => "bg-warning text-dark",
        "InProgress" => "bg-info text-white",
        "Closed" => "bg-success text-white",
        _ => "bg-secondary"
    };
    
    var statusText = Model.Status switch
    {
        "Open" => "باز",
        "InProgress" => "در حال بررسی",
        "Closed" => "بسته شده",
        _ => Model.Status
    };
}

<div class="container-fluid">
    <!-- Success/Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Ticket Info -->
        <div class="col-lg-8">
            <!-- Header -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <span>
                        <i class="fas fa-ticket-alt me-2"></i>
                        @Model.Title
                    </span>
                    <span class="badge @statusBadgeClass fs-6">@statusText</span>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong><i class="fas fa-user me-1"></i> کاربر:</strong> @Model.UserName
                        </div>
                        <div class="col-md-6">
                            <strong><i class="fas fa-envelope me-1"></i> ایمیل:</strong> @Model.UserEmail
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong><i class="fas fa-calendar me-1"></i> تاریخ ایجاد:</strong> @Model.CreatedAt.ToString("yyyy/MM/dd HH:mm")
                        </div>
                        <div class="col-md-6">
                            <strong><i class="fas fa-hashtag me-1"></i> شماره تیکت:</strong> #@Model.Id
                        </div>
                    </div>
                    <hr />
                    <div>
                        <strong><i class="fas fa-file-alt me-1"></i> توضیحات:</strong>
                        <p class="mt-2 p-3 bg-light rounded">@Model.Description</p>
                    </div>
                </div>
            </div>

            <!-- Replies Section -->
            <div class="card mb-4">
                <div class="card-header bg-secondary text-white">
                    <i class="fas fa-comments me-2"></i>
                    پاسخ‌ها (@Model.Replies.Count)
                </div>
                <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                    @if (Model.Replies.Any())
                    {
                        @foreach (var reply in Model.Replies.OrderBy(r => r.CreatedAt))
                        {
                            var replyClass = reply.IsAdminReply ? "border-start border-success border-4" : "border-start border-primary border-4";
                            var replyBg = reply.IsAdminReply ? "bg-success bg-opacity-10" : "bg-primary bg-opacity-10";
                            var replyLabel = reply.IsAdminReply ? "پاسخ مدیر" : "پیام کاربر";
                            var replyIcon = reply.IsAdminReply ? "fas fa-user-shield" : "fas fa-user";
                            <div class="mb-3 p-3 rounded @replyBg @replyClass">
                                <div class="d-flex justify-content-between mb-2">
                                    <span class="badge @(reply.IsAdminReply ? "bg-success" : "bg-primary")">
                                        <i class="@replyIcon me-1"></i>
                                        @replyLabel
                                    </span>
                                    <small class="text-muted">
                                        <i class="fas fa-clock me-1"></i>
                                        @reply.CreatedAt.ToString("yyyy/MM/dd HH:mm")
                                    </small>
                                </div>
                                <p class="mb-0">@reply.Message</p>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-comment-slash fa-3x mb-3"></i>
                            <p>هنوز پاسخی ثبت نشده</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Add Reply Form -->
            @if (Model.Status != "Closed")
            {
                <div class="card mb-4">
                    <div class="card-header bg-success text-white">
                        <i class="fas fa-reply me-2"></i>
                        ارسال پاسخ
                    </div>
                    <div class="card-body">
                        <form method="post" action="/Admin/AddReply">
                            <input type="hidden" name="ticketId" value="@Model.Id" />
                            <div class="mb-3">
                                <textarea name="message" class="form-control" rows="4" 
                                          placeholder="پاسخ خود را بنویسید..." required></textarea>
                            </div>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-paper-plane me-2"></i>
                                ارسال پاسخ
                            </button>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-secondary">
                    <i class="fas fa-lock me-2"></i>
                    این تیکت بسته شده است. برای ارسال پاسخ ابتدا آن را باز کنید.
                </div>
            }
        </div>

        <!-- Sidebar - Admin Actions -->
        <div class="col-lg-4">
            <div class="card sticky-top" style="top: 20px;">
                <div class="card-header bg-dark text-white">
                    <i class="fas fa-cogs me-2"></i>
                    عملیات مدیریتی
                </div>
                <div class="card-body">
                    <p class="mb-3 fw-bold">تغییر وضعیت:</p>
                    
                    @if (Model.Status != "InProgress")
                    {
                        <form method="post" action="/Admin/ChangeStatus" class="mb-2">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <input type="hidden" name="status" value="InProgress" />
                            <button type="submit" class="btn btn-info w-100">
                                <i class="fas fa-hourglass-half me-2"></i>
                                در حال بررسی
                            </button>
                        </form>
                    }
                    
                    @if (Model.Status != "Closed")
                    {
                        <form method="post" action="/Admin/ChangeStatus" class="mb-2">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <input type="hidden" name="status" value="Closed" />
                            <button type="submit" class="btn btn-success w-100">
                                <i class="fas fa-check-circle me-2"></i>
                                بستن تیکت
                            </button>
                        </form>
                    }
                    
                    @if (Model.Status != "Open")
                    {
                        <form method="post" action="/Admin/ChangeStatus" class="mb-2">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <input type="hidden" name="status" value="Open" />
                            <button type="submit" class="btn btn-warning w-100">
                                <i class="fas fa-folder-open me-2"></i>
                                باز کردن مجدد
                            </button>
                        </form>
                    }
                    
                    <hr />
                    
                    <a href="/Admin/AllTickets" class="btn btn-outline-secondary w-100">
                        <i class="fas fa-arrow-right me-2"></i>
                        بازگشت به لیست
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
