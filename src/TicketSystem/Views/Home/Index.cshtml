@{
    ViewData["Title"] = "صفحه اصلی";
}

<div class="text-center mt-5">
    <h1 class="display-4">
        <i class="bi bi-ticket-perforated text-primary"></i>
        سامانه ثبت و پیگیری درخواست‌ها
    </h1>
    <p class="lead mt-3">به سامانه تیکت خوش آمدید</p>
    
    <hr class="my-4" />
    
    @if (Context.Session.GetInt32("UserId") != null)
    {
        var role = Context.Session.GetString("UserRole");
        var name = Context.Session.GetString("UserName");
        
        <div class="alert alert-success">
            <h4>خوش آمدید، @name!</h4>
        </div>
        
        @if (role == "Admin")
        {
            <a asp-controller="Admin" asp-action="Index" class="btn btn-danger btn-lg m-2">
                <i class="bi bi-speedometer2"></i> ورود به پنل مدیریت
            </a>
        }
        else
        {
            <a asp-controller="Tickets" asp-action="Index" class="btn btn-primary btn-lg m-2">
                <i class="bi bi-list-task"></i> مشاهده درخواست‌ها
            </a>
            <a asp-controller="Tickets" asp-action="Create" class="btn btn-success btn-lg m-2">
                <i class="bi bi-plus-circle"></i> ثبت درخواست جدید
            </a>
        }
    }
    else
    {
        <p class="text-muted">برای استفاده از سیستم، ابتدا وارد شوید یا ثبت‌نام کنید.</p>
        
        <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg m-2">
            <i class="bi bi-box-arrow-in-right"></i> ورود به سیستم
        </a>
        <a asp-controller="Account" asp-action="Register" class="btn btn-success btn-lg m-2">
            <i class="bi bi-person-plus"></i> ثبت‌نام
        </a>
    }
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <i class="bi bi-pencil-square text-primary" style="font-size: 3rem;"></i>
                <h5 class="card-title mt-3">ثبت درخواست</h5>
                <p class="card-text">درخواست خود را به راحتی ثبت کنید</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <i class="bi bi-search text-success" style="font-size: 3rem;"></i>
                <h5 class="card-title mt-3">پیگیری وضعیت</h5>
                <p class="card-text">وضعیت درخواست‌های خود را پیگیری کنید</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <i class="bi bi-chat-dots text-info" style="font-size: 3rem;"></i>
                <h5 class="card-title mt-3">دریافت پاسخ</h5>
                <p class="card-text">پاسخ درخواست خود را دریافت کنید</p>
            </div>
        </div>
    </div>
</div>
