@model TicketSystem.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "داشبورد";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="bi bi-speedometer2 me-2"></i>داشبورد</h2>
            <p class="text-muted">خوش آمدید، @Model.UserName</p>
        </div>
    </div>

    <!-- آمار کلی -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card bg-primary text-white h-100">
                <div class="card-body text-center">
                    <h3>@Model.TotalTickets</h3>
                    <p class="mb-0">کل درخواست‌ها</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-success text-white h-100">
                <div class="card-body text-center">
                    <h3>@Model.OpenTickets</h3>
                    <p class="mb-0">باز</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-warning text-dark h-100">
                <div class="card-body text-center">
                    <h3>@Model.InProgressTickets</h3>
                    <p class="mb-0">در حال بررسی</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-secondary text-white h-100">
                <div class="card-body text-center">
                    <h3>@Model.ClosedTickets</h3>
                    <p class="mb-0">بسته شده</p>
                </div>
            </div>
        </div>
    </div>

    <!-- دکمه‌های عملیات -->
    <div class="row mb-4">
        <div class="col-12">
            <a asp-action="Create" class="btn btn-success btn-lg me-2">
                <i class="bi bi-plus-circle me-1"></i>ثبت درخواست جدید
            </a>
            <a asp-action="MyTickets" class="btn btn-outline-primary btn-lg">
                <i class="bi bi-list-ul me-1"></i>مشاهده همه درخواست‌ها
            </a>
        </div>
    </div>

    <!-- آخرین درخواست‌ها -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>آخرین درخواست‌ها</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentTickets.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>عنوان</th>
                                        <th>وضعیت</th>
                                        <th>تاریخ</th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ticket in Model.RecentTickets)
                                    {
                                        <tr>
                                            <td>@ticket.Id</td>
                                            <td>@ticket.Title</td>
                                            <td>
                                                <span class="badge @ticket.StatusBadgeClass">@ticket.StatusDisplay</span>
                                            </td>
                                            <td>@ticket.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@ticket.Id" class="btn btn-sm btn-info">
                                                    مشاهده
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-inbox display-4 text-muted"></i>
                            <p class="text-muted mt-2">هنوز درخواستی ثبت نکرده‌اید</p>
                            <a asp-action="Create" class="btn btn-primary">ثبت اولین درخواست</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
