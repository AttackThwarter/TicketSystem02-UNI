@model List<TicketSystem.ViewModels.TicketListViewModel>

@{
    ViewData["Title"] = "درخواست‌های من";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-list-ul me-2"></i>درخواست‌های من</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i>درخواست جدید
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>عنوان</th>
                                <th>وضعیت</th>
                                <th>تاریخ ثبت</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ticket in Model)
                            {
                                <tr>
                                    <td>@ticket.Id</td>
                                    <td>@ticket.Title</td>
                                    <td>
                                        <span class="badge @ticket.StatusBadgeClass">@ticket.StatusDisplay</span>
                                    </td>
                                    <td>@ticket.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@ticket.Id" class="btn btn-sm btn-info">
                                            <i class="bi bi-eye me-1"></i>مشاهده
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <h4 class="mt-3 text-muted">هنوز درخواستی ثبت نکرده‌اید</h4>
                <p class="text-muted">اولین درخواست خود را ثبت کنید</p>
                <a asp-action="Create" class="btn btn-success btn-lg">
                    <i class="bi bi-plus-circle me-1"></i>ثبت درخواست
                </a>
            </div>
        </div>
    }
</div>
