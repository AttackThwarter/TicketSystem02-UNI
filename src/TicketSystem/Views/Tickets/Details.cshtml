@model TicketSystem.ViewModels.TicketDetailsViewModel

@{
    ViewData["Title"] = "جزئیات درخواست";
}

<div class="container mt-4">
    <div class="row">
        <!-- ستون اصلی - جزئیات تیکت -->
        <div class="col-md-8">
            <!-- هدر تیکت -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-envelope-open me-2"></i>
                        درخواست #@Model.Id
                    </h5>
                    <span class="badge @(Model.Status == "Open" ? "bg-success" : Model.Status == "InProgress" ? "bg-warning text-dark" : "bg-secondary") fs-6">
                        @(Model.Status == "Open" ? "باز" : Model.Status == "InProgress" ? "در حال بررسی" : "بسته شده")
                    </span>
                </div>
                <div class="card-body">
                    <h4 class="card-title text-end">@Model.Title</h4>
                    <hr />
                    <p class="card-text text-end" style="white-space: pre-wrap;">@Model.Description</p>
                    <hr />
                    <div class="text-muted text-end small">
                        <i class="bi bi-calendar me-1"></i>
                        تاریخ ثبت: @Model.CreatedAt.ToString("yyyy/MM/dd HH:mm")
                    </div>
                </div>
            </div>

            <!-- بخش پاسخ‌ها -->
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0 text-end">
                        <i class="bi bi-chat-dots me-2"></i>
                        پاسخ‌ها
                    </h6>
                </div>
                <div class="card-body">
                    @if (Model.Replies != null && Model.Replies.Any())
                    {
                        @foreach (var reply in Model.Replies.OrderBy(r => r.CreatedAt))
                        {
                            <div class="mb-3 p-3 rounded @(reply.IsAdminReply ? "bg-info bg-opacity-10 border-start border-4 border-info" : "bg-light border-start border-4 border-primary")">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <small class="text-muted">@reply.CreatedAt.ToString("yyyy/MM/dd HH:mm")</small>
                                    <strong class="@(reply.IsAdminReply ? "text-info" : "text-primary")">
                                        <i class="bi @(reply.IsAdminReply ? "bi-shield-check" : "bi-person") me-1"></i>
                                        @(reply.IsAdminReply ? "پشتیبانی" : "شما")
                                    </strong>
                                </div>
                                <p class="mb-0 text-end" style="white-space: pre-wrap;">@reply.Message</p>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="bi bi-chat-square-text fs-1 d-block mb-2"></i>
                            هنوز پاسخی ثبت نشده است
                        </div>
                    }

                    <!-- فرم ارسال پاسخ (فقط اگر تیکت بسته نشده) -->
                    @if (Model.Status != "Closed")
                    {
                        <hr />
                        <form asp-controller="Tickets" asp-action="AddReply" asp-route-id="@Model.Id" method="post">
                            <div class="mb-3">
                                <label class="form-label text-end d-block">پاسخ شما</label>
                                <textarea name="message" class="form-control text-end" rows="3" 
                                          placeholder="پاسخ خود را بنویسید..." required></textarea>
                            </div>
                            <div class="text-start">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-send me-1"></i>
                                    ارسال پاسخ
                                </button>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-secondary text-center mt-3">
                            <i class="bi bi-lock me-1"></i>
                            این درخواست بسته شده و امکان ارسال پاسخ وجود ندارد
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- ستون کناری -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0 text-end">عملیات</h6>
                </div>
                <div class="card-body">
                    <a asp-action="MyTickets" class="btn btn-outline-secondary w-100 mb-2">
                        <i class="bi bi-arrow-right me-1"></i>
                        بازگشت به لیست
                    </a>
                    <a asp-action="Create" class="btn btn-success w-100">
                        <i class="bi bi-plus-circle me-1"></i>
                        درخواست جدید
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Toast Notification -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1050">
        <div class="toast show align-items-center text-white bg-success border-0" role="alert">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="bi bi-check-circle me-2"></i>
                    @TempData["SuccessMessage"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1050">
        <div class="toast show align-items-center text-white bg-danger border-0" role="alert">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="bi bi-exclamation-circle me-2"></i>
                    @TempData["ErrorMessage"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        // Auto-hide toasts after 3 seconds
        document.addEventListener('DOMContentLoaded', function() {
            var toasts = document.querySelectorAll('.toast');
            toasts.forEach(function(toast) {
                setTimeout(function() {
                    toast.remove();
                }, 3000);
            });
        });
    </script>
}
