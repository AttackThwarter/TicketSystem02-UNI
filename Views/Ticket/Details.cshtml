@model TicketSystem.ViewModels.TicketDetailsViewModel

@{
    ViewData["Title"] = $"درخواست #{Model.Id}";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="bi bi-ticket-detailed me-2"></i>
                            درخواست #@Model.Id
                        </h4>
                        <span class="badge @Model.StatusBadgeClass fs-6">
                            @Model.StatusDisplay
                        </span>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="mb-4">
                        <h5 class="text-primary mb-2">
                            <i class="bi bi-card-heading me-1"></i>
                            عنوان
                        </h5>
                        <p class="fs-5 mb-0">@Model.Title</p>
                    </div>

                    <hr>

                    <div class="mb-4">
                        <h5 class="text-primary mb-2">
                            <i class="bi bi-text-paragraph me-1"></i>
                            توضیحات
                        </h5>
                        <div class="bg-light p-3 rounded">
                            <p class="mb-0" style="white-space: pre-wrap;">@Model.Description</p>
                        </div>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <h6 class="text-muted mb-1">
                                <i class="bi bi-calendar me-1"></i>
                                تاریخ ثبت
                            </h6>
                            <p class="mb-0">@Model.CreatedAt.ToString("yyyy/MM/dd - HH:mm")</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <h6 class="text-muted mb-1">
                                <i class="bi bi-info-circle me-1"></i>
                                وضعیت فعلی
                            </h6>
                            <span class="badge @Model.StatusBadgeClass">
                                @Model.StatusDisplay
                            </span>
                        </div>
                    </div>

                    @if (Context.Session.GetString("UserRole") == "Admin")
                    {
                        <hr>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <h6 class="text-muted mb-1">
                                    <i class="bi bi-person me-1"></i>
                                    نام کاربر
                                </h6>
                                <p class="mb-0">@Model.UserFullName</p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <h6 class="text-muted mb-1">
                                    <i class="bi bi-envelope me-1"></i>
                                    ایمیل کاربر
                                </h6>
                                <p class="mb-0">@Model.UserEmail</p>
                            </div>
                        </div>
                    }
                </div>

                <div class="card-footer bg-white py-3">
                    <div class="d-flex justify-content-between">
                        <a asp-action="MyTickets" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-right me-1"></i>
                            برگشت به لیست
                        </a>
                        
                        @if (Context.Session.GetString("UserRole") == "Admin")
                        {
                            <a asp-controller="Admin" asp-action="AllTickets" class="btn btn-outline-primary">
                                <i class="bi bi-list me-1"></i>
                                پنل مدیریت
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
