@model List<TicketSystem.ViewModels.TicketListViewModel>

@{
    ViewData["Title"] = "درخواست‌های من";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-list-ul me-2"></i>
            درخواست‌های من
        </h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i>
            درخواست جدید
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 60px;">شماره</th>
                                <th>عنوان درخواست</th>
                                <th style="width: 130px;">وضعیت</th>
                                <th style="width: 150px;">تاریخ ثبت</th>
                                <th style="width: 100px;">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ticket in Model)
                            {
                                <tr>
                                    <td class="fw-bold text-muted">#@ticket.Id</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@ticket.Id" 
                                           class="text-decoration-none">
                                            @ticket.Title
                                        </a>
                                    </td>
                                    <td>
                                        <span class="badge @ticket.StatusBadgeClass">
                                            @ticket.StatusDisplay
                                        </span>
                                    </td>
                                    <td class="text-muted">
                                        @ticket.CreatedAt.ToString("yyyy/MM/dd")
                                        <br>
                                        <small>@ticket.CreatedAt.ToString("HH:mm")</small>
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@ticket.Id" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i>
                                            جزئیات
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <h5 class="mt-3 text-muted">هیچ درخواستی ثبت نشده است</h5>
                    <p class="text-muted">برای ثبت اولین درخواست خود، روی دکمه زیر کلیک کنید.</p>
                    <a asp-action="Create" class="btn btn-success">
                        <i class="bi bi-plus-circle me-1"></i>
                        ثبت درخواست جدید
                    </a>
                </div>
            }
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Dashboard" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-right me-1"></i>
            برگشت به داشبورد
        </a>
    </div>
</div>
