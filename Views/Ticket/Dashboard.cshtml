@model TicketSystem.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "داشبورد";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="bg-primary text-white rounded-3 p-4">
                <h2 class="mb-1">
                    <i class="bi bi-person-circle me-2"></i>
                    خوش آمدید، @Model.UserName
                </h2>
                <p class="mb-0 opacity-75">از داشبورد خود می‌توانید درخواست‌های خود را مدیریت کنید.</p>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3 col-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="display-4 text-primary mb-2">@Model.TotalTickets</div>
                    <div class="text-muted">کل درخواست‌ها</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="display-4 text-success mb-2">@Model.OpenTickets</div>
                    <div class="text-muted">باز</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="display-4 text-warning mb-2">@Model.InProgressTickets</div>
                    <div class="text-muted">در حال بررسی</div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="display-4 text-secondary mb-2">@Model.ClosedTickets</div>
                    <div class="text-muted">بسته شده</div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <a asp-action="Create" class="btn btn-success btn-lg w-100 py-3">
                <i class="bi bi-plus-circle me-2"></i>
                ثبت درخواست جدید
            </a>
        </div>
        <div class="col-md-6 mb-3">
            <a asp-action="MyTickets" class="btn btn-outline-primary btn-lg w-100 py-3">
                <i class="bi bi-list-ul me-2"></i>
                مشاهده همه درخواست‌ها
            </a>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0">
                <i class="bi bi-clock-history me-2"></i>
                آخرین درخواست‌ها
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.RecentTickets.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>عنوان</th>
                                <th>وضعیت</th>
                                <th>تاریخ ثبت</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ticket in Model.RecentTickets)
                            {
                                <tr>
                                    <td>@ticket.Id</td>
                                    <td>@ticket.Title</td>
                                    <td>
                                        <span class="badge @ticket.StatusBadgeClass">
                                            @ticket.StatusDisplay
                                        </span>
                                    </td>
                                    <td>@ticket.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@ticket.Id" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i>
                                            مشاهده
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-inbox display-1"></i>
                    <p class="mt-3">هنوز درخواستی ثبت نکرده‌اید.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        ثبت اولین درخواست
                    </a>
                </div>
            }
        </div>
    </div>
</div>
